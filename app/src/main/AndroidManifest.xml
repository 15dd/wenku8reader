<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.cyh128.wenku8reader.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <activity
            android:name="com.cyh128.wenku8reader.activity.LoginingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.cyh128.wenku8reader.activity.AppActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.LoginInputActivity"
            android:theme="@style/Theme.MyApplication"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.ContentsActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.ReaderActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.SettingActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.PhotoViewActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.CommentActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.CommentInCommentActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.SearchActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.TagSearchActivity"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name="com.cyh128.wenku8reader.activity.TagSelectActivity"
            android:theme="@style/Theme.MyApplication" />

    </application>

</manifest>